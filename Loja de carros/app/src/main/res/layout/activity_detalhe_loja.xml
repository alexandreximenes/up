<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ti.loja.Empresa.DetalheLojaActivity">


    <LinearLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageDetalheLoja"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvNomeDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome" />

        <EditText
            android:id="@+id/edNomeDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:enabled="false"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvSiteDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Site" />

        <EditText
            android:id="@+id/edSiteDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:enabled="false"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tvTelefoneDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone" />

        <EditText
            android:id="@+id/edTelefoneDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:enabled="false"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvEnderecoDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EndereÃ§o" />

        <EditText
            android:id="@+id/edEnderecoDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:enabled="false"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvEmailDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-mail" />

        <EditText
            android:id="@+id/edEmailDetalheLoja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:inputType="textPersonName" />


        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btSalvarDetalheLoja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar" />

            <Button
                android:id="@+id/btVoltarDetalheLoja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
